[user]
	name = RMacy
	email = ryan@hackery.io
[push]
	default = simple
[color]
	ui = auto
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	aa = add --all
